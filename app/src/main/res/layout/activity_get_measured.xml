<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.manujindal.stichme.GetMeasured">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_column="0"
                android:layout_row="0"
                android:text="STEP 3- Get Measured!"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView14"
                android:layout_column="0"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_row="1"
                android:text="Upper Garment"
                android:textSize="20sp" />

            <GridLayout
                android:id="@+id/gridgetmeasured"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView16"
                android:layout_column="0"
                android:layout_row="2">

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_column="2"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_row="0"
                    android:layout_toEndOf="@+id/numberPicker"
                    android:layout_toRightOf="@+id/numberPicker"
                    android:text="    o    " />

                <NumberPicker
                    android:id="@+id/numberPicker1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_column="3"
                    android:layout_row="0"
                    android:layout_toEndOf="@+id/textView23"
                    android:layout_toRightOf="@+id/textView23" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView15"
                    android:layout_centerHorizontal="true"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_row="0"
                    android:text="Upper Chest"
                    android:textSize="20sp" />

                <NumberPicker
                    android:id="@+id/numberPicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_column="1"
                    android:layout_marginLeft="39dp"
                    android:layout_marginStart="39dp"
                    android:layout_row="0"
                    android:layout_toEndOf="@+id/textView16"
                    android:layout_toRightOf="@+id/textView16" />

                <TextView
                    android:id="@+id/textView231"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_column="2"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_row="1"
                    android:layout_toEndOf="@+id/numberPicker"
                    android:layout_toRightOf="@+id/numberPicker"
                    android:text="    o    " />

                <NumberPicker
                    android:id="@+id/numberPicker3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_column="3"
                    android:layout_row="1"
                    android:layout_toEndOf="@+id/textView23"
                    android:layout_toRightOf="@+id/textView23" />

                <TextView
                    android:id="@+id/textView1811"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView15"
                    android:layout_centerHorizontal="true"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_row="1"
                    android:text="Round Chest"
                    android:textSize="20sp" />

                <NumberPicker
                    android:id="@+id/numberPicker2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_column="1"
                    android:layout_marginLeft="39dp"
                    android:layout_marginStart="39dp"
                    android:layout_row="1"
                    android:layout_toEndOf="@+id/textView16"
                    android:layout_toRightOf="@+id/textView16" />

            </GridLayout>

            <Button
                android:id="@+id/NextPage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView16"
                android:layout_column="0"
                android:layout_marginTop="10dp"
                android:layout_row="3"
                android:onClick="nextActivity"
                android:text="NEXT" />

        </GridLayout>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
