<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bkg5"
    android:layout_height="match_parent"
    tools:context="com.manujindal.stichme.SelectFabric0">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="471dp"
        android:foregroundGravity="top|center_horizontal"
        android:gravity="top|center_horizontal"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foregroundGravity="top"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_row="0"
                android:text="STEP 1"
                android:textColor="#000000"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_row="1"
                android:text="Select Fabric"
                android:textColor="#000000"
                android:textSize="20dp" />

            <ListView
                android:id="@+id/selectFabricList"
                android:layout_width="320dp"
                android:layout_height="300dp"
                android:layout_column="0"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_row="2"
                android:background="@drawable/list_background"
                android:backgroundTint="#50000000"
                android:divider="#000000"
                android:dividerHeight="2dp"
                android:layout_weight="1"
                android:listSelector="#ffffff" />

            <Button
                android:id="@+id/NextPage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_row="3"
                android:background="@drawable/button4"
                android:fontFamily="sans-serif-smallcaps"
                android:onClick="nextActFromMain"
                android:text="Customize Now!"
                android:textColor="#000000"
                android:textStyle="bold" />

        </GridLayout>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
