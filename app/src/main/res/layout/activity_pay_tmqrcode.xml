<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.manujindal.stichme.PayTMQRCode">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="471dp"
        android:gravity="center_vertical|center_horizontal"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foregroundGravity="center_vertical|center_horizontal"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_row="0"
                app:srcCompat="@drawable/paytmqrcode" />

            <Button
                android:id="@+id/paymentConfirmedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="10dp"
                android:layout_row="1"
                android:background="@drawable/button8"
                android:fontFamily="sans-serif-smallcaps"
                android:foregroundGravity="center_vertical|center_horizontal"
                android:onClick="paymentConfirmed"
                android:text="Confirm"
                android:textColor="#ffffff"
                android:textSize="17dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/paymentPendingButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="10dp"
                android:layout_row="2"
                android:background="@drawable/button9"
                android:fontFamily="sans-serif-smallcaps"
                android:foregroundGravity="center_vertical|center_horizontal"
                android:onClick="paymentPending"
                android:text="Pending"
                android:textColor="#ffffff"
                android:textSize="17dp"
                android:textStyle="bold" />
        </GridLayout>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
