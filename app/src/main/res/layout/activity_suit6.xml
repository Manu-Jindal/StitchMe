<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.manujindal.stichme.Suit6">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_row="0"
            android:text="Choose Pocket Type"
            android:textSize="25dp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="368dp"
            android:layout_height="400dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

                <ImageButton
                    android:id="@+id/Pocket1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_row="1"
                    android:onClick="nextActFromMain"
                    android:tag="Two Straight"
                    app:srcCompat="@drawable/suit41resized" />

                <TextView
                    android:id="@+id/PocketLabel1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="3dp"
                    android:layout_row="2"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Two Straight"
                    android:textSize="20sp" />

                <ImageButton
                    android:id="@+id/Pocket2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_row="3"
                    android:onClick="nextActFromMain"
                    android:tag="Two Straight and\nOne Ticket"
                    app:srcCompat="@drawable/suit42resized" />

                <TextView
                    android:id="@+id/PocketLabel2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="3dp"
                    android:layout_row="4"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Two Straight and\nOne Ticket"
                    android:textSize="20sp" />

                <ImageButton
                    android:id="@+id/Pocket3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_row="5"
                    android:onClick="nextActFromMain"
                    android:tag="Two Slanted"
                    app:srcCompat="@drawable/suit43resized" />

                <TextView
                    android:id="@+id/PocketLabel3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="3dp"
                    android:layout_row="6"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Two Slanted"
                    android:textSize="20sp" />

                <ImageButton
                    android:id="@+id/Pocket4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_row="7"
                    android:onClick="nextActFromMain"
                    android:tag="Two Slanted and\nOne Ticket"
                    app:srcCompat="@drawable/suit44resized" />

                <TextView
                    android:id="@+id/PocketLabel4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="3dp"
                    android:layout_row="8"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Two Slanted and\nOne Ticket"
                    android:textSize="20sp" />

                <ImageButton
                    android:id="@+id/Pocket5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_row="9"
                    android:onClick="nextActFromMain"
                    android:tag="Two Straight\n(No Flaps)"
                    app:srcCompat="@drawable/suit45resized" />

                <TextView
                    android:id="@+id/PocketLabel5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="3dp"
                    android:layout_row="10"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Two Straight\n(No Flaps)"
                    android:textSize="20sp" />

                <ImageButton
                    android:id="@+id/Pocket6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_row="11"
                    android:onClick="nextActFromMain"
                    android:tag="Two Straight and One\nTicket (No Flaps)"
                    app:srcCompat="@drawable/suit46resized" />

                <TextView
                    android:id="@+id/PocketLabel6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="3dp"
                    android:layout_row="12"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Two Straight and One\nTicket (No Flaps)"
                    android:textSize="20sp" />

            </GridLayout>
        </ScrollView>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
