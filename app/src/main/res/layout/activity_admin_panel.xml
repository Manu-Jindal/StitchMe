<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background1"
    tools:context="com.manujindal.stichme.MainActivity">


    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:foregroundGravity="center_vertical|center_horizontal"
        android:gravity="center_vertical|center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foregroundGravity="bottom|center_horizontal">

            <Button
                android:id="@+id/viewFabricsButton"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:layout_alignLeft="@+id/newRecord"
                android:layout_alignStart="@+id/newRecord"
                android:layout_below="@+id/newRecord"
                android:layout_column="0"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_row="0"
                android:background="@drawable/button2"
                android:foregroundGravity="center_vertical|center_horizontal"
                android:onClick="viewFabrics"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="Add/Remove Fabric"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/viewCustomers"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:layout_alignLeft="@+id/newRecord"
                android:layout_alignStart="@+id/newRecord"
                android:layout_below="@+id/newRecord"
                android:layout_column="1"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_row="0"
                android:background="@drawable/button2"
                android:foregroundGravity="center_vertical|center_horizontal"
                android:onClick="viewCustomers"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="View Customers"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/viewEmployees"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:layout_alignLeft="@+id/newRecord"
                android:layout_alignStart="@+id/newRecord"
                android:layout_below="@+id/newRecord"
                android:layout_column="0"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_row="1"
                android:background="@drawable/button2"
                android:foregroundGravity="center_vertical|center_horizontal"
                android:onClick="viewEmployees"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="View Employees"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/paymentStatus"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:layout_alignLeft="@+id/newRecord"
                android:layout_alignStart="@+id/newRecord"
                android:layout_below="@+id/newRecord"
                android:layout_column="1"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_row="1"
                android:background="@drawable/button2"
                android:foregroundGravity="center_vertical|center_horizontal"
                android:onClick="paymentStatus"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="Payment Status"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/button10"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:layout_column="0"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_row="2"
                android:background="@drawable/button2"
                android:foregroundGravity="center_vertical|center_horizontal"
                android:onClick="viewDashboard"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="View Dashboard"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/exportdata"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:layout_column="1"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_row="2"
                android:background="@drawable/button2"
                android:foregroundGravity="center_vertical|center_horizontal"
                android:onClick="exportDB"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="Export Data"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/appointments"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:layout_column="0"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_row="3"
                android:background="@drawable/button2"
                android:foregroundGravity="center_vertical|center_horizontal"
                android:onClick="appointments"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="Add/View Appointment"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/home"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:layout_column="1"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_row="3"
                android:background="@drawable/button2"
                android:foregroundGravity="center_vertical|center_horizontal"
                android:onClick="goHome"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="Go Back Home"
                android:textColor="#ffffff" />


        </GridLayout>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
