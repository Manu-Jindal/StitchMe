<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.manujindal.stichme.Shirt2">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_row="0"
            android:text="Choose Pocket Type"
            android:textSize="25dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="0dp" />

        <ScrollView
            android:layout_width="368dp"
            android:layout_height="400dp"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.324">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

                <ImageButton
                    android:id="@+id/WithoutPocket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_row="1"
                    android:onClick="nextActFromMain"
                    android:tag="Without Pocket"
                    app:srcCompat="@drawable/shirt21resized" />

                <TextView
                    android:id="@+id/textView0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="3dp"
                    android:layout_row="2"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Without Pocket"
                    android:textSize="20sp" />

                <ImageButton
                    android:id="@+id/RegularCloseFit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_row="3"
                    android:onClick="nextActFromMain"
                    android:tag="Two Angled Pocket"
                    app:srcCompat="@drawable/shirt22resized" />

                <TextView
                    android:id="@+id/preferenceLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="3dp"
                    android:layout_row="4"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Two Angled Pocket"
                    android:textSize="20sp" />

                <ImageButton
                    android:id="@+id/OneAngledPocket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_row="5"
                    android:onClick="nextActFromMain"
                    android:tag="One Angled Pocket"
                    app:srcCompat="@drawable/shirt23resized" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="3dp"
                    android:layout_row="6"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="One Angled Pocket"
                    android:textSize="20sp" />

                <ImageButton
                    android:id="@+id/TwoRoundedwithButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_row="7"
                    android:onClick="nextActFromMain"
                    android:tag="Two Rounded with Button"
                    app:srcCompat="@drawable/shirt24resized" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="3dp"
                    android:layout_row="8"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Two Rounded with Button"
                    android:textSize="20sp" />

                <ImageButton
                    android:id="@+id/OneRoundedwithButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_row="9"
                    android:onClick="nextActFromMain"
                    android:tag="One Rounded with Button"
                    app:srcCompat="@drawable/shirt25resized" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="3dp"
                    android:layout_row="10"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="One Rounded with Button"
                    android:textSize="20sp" />

                <ImageButton
                    android:id="@+id/TwoPocketswithFlap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_row="11"
                    android:onClick="nextActFromMain"
                    android:tag="Two Pockets with Flap"
                    app:srcCompat="@drawable/shirt26resized" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="3dp"
                    android:layout_row="12"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Two Pockets with Flap"
                    android:textSize="20sp" />

            </GridLayout>
        </ScrollView>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
