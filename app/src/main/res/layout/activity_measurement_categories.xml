<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bkg2"
    tools:context="com.manujindal.stichme.MeasurementCategories">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:foregroundGravity="center_vertical|center_horizontal"
        android:gravity="center_vertical|center_horizontal"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foregroundGravity="center_vertical|center_horizontal">

            <Button
                android:id="@+id/upperGarmentId"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_column="0"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:layout_row="0"
                android:background="@drawable/button5"
                android:fontFamily="sans-serif-smallcaps"
                android:onClick="upperGarment"
                android:text="Upper Garment"
                android:textSize="20dp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <Button
                android:id="@+id/lowerGarmentId"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_column="0"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:layout_row="1"
                android:background="@drawable/button5"
                android:fontFamily="sans-serif-smallcaps"
                android:onClick="lowerGarment"
                android:text="Lower Garment"
                android:textSize="20dp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <Button
                android:id="@+id/moveToCartId"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_column="0"
                android:layout_gravity="center_horizontal"
                android:layout_row="2"
                android:textColor="#000000"
                android:background="@drawable/button5"
                android:fontFamily="sans-serif-smallcaps"
                android:onClick="moveToCart"
                android:text="Move To Cart"
                android:textSize="20dp"
                android:textStyle="bold" />
        </GridLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
