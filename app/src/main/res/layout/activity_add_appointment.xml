<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.manujindal.stichme.AddAppointment">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:gravity="center_vertical|center_horizontal"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:foregroundGravity="center_vertical|center_horizontal">

                <GridLayout
                    android:id="@+id/gridLayout2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_row="0"
                    android:foregroundGravity="center_vertical|center_horizontal"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="0dp">

                    <TextView
                        android:id="@+id/appointmentDateLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_gravity="center_vertical|fill_horizontal"
                        android:layout_marginLeft="15dp"
                        android:layout_row="0"
                        android:fontFamily="sans-serif-smallcaps"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="Appointment\nDate"
                        android:textAlignment="textStart"
                        android:textSize="20sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/appointmentDate"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_column="1"
                        android:layout_gravity="center_vertical|fill_horizontal"
                        android:layout_marginLeft="40dp"
                        android:layout_row="0"
                        android:background="#000000"
                        android:fontFamily="sans-serif-smallcaps"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="Date"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/slotLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_gravity="center_vertical|fill_horizontal"
                        android:layout_marginLeft="15dp"
                        android:layout_row="1"
                        android:fontFamily="sans-serif-smallcaps"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="Slot"
                        android:textAlignment="textStart"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/slot"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_column="1"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="20dp"
                        android:layout_row="1"
                        android:background="#000000"
                        android:backgroundTint="#000000"
                        android:ems="10"
                        android:fontFamily="sans-serif-smallcaps"
                        android:foregroundTint="#000000"
                        android:gravity="center_vertical|center_horizontal"
                        android:inputType="textPersonName"
                        android:popupTheme="@style/PopupMenuStyle" />

                    <TextView
                        android:id="@+id/DesignerLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_gravity="center_vertical|fill_horizontal"
                        android:layout_marginLeft="15dp"
                        android:layout_row="2"
                        android:fontFamily="sans-serif-smallcaps"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="Designer"
                        android:textAlignment="textStart"
                        android:textSize="20sp"
                        android:textStyle="bold" />


                    <Spinner
                        android:id="@+id/designer"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_column="1"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="40dp"
                        android:layout_row="2"
                        android:background="#000000"
                        android:backgroundTint="#000000"
                        android:ems="10"
                        android:fontFamily="sans-serif-smallcaps"
                        android:foregroundTint="#000000"
                        android:gravity="center_vertical|center_horizontal"
                        android:inputType="textPersonName"
                        android:popupTheme="@style/PopupMenuStyle" />

                    <TextView
                        android:id="@+id/remarksLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_gravity="center_vertical|fill_horizontal"
                        android:layout_marginLeft="15dp"
                        android:layout_row="3"
                        android:fontFamily="sans-serif-smallcaps"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="Add Remarks"
                        android:textSize="20sp"
                        android:textStyle="bold" />


                    <EditText
                        android:id="@+id/remarks"
                        android:layout_width="150dp"
                        android:layout_height="80dp"
                        android:layout_column="1"
                        android:layout_gravity="center_vertical|fill_horizontal"
                        android:layout_marginLeft="40dp"
                        android:layout_row="3"
                        android:background="#000000"
                        android:fontFamily="sans-serif-smallcaps"
                        android:gravity="center_vertical|center_horizontal"
                        android:inputType="textMultiLine"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:textSize="20sp" />



                </GridLayout>

                <Button
                    android:id="@+id/NextPage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginTop="30dp"
                    android:layout_row="4"
                    android:background="@drawable/button1"
                    android:fontFamily="sans-serif-smallcaps"
                    android:onClick="bookAppointment"
                    android:text="BOOK" />

            </GridLayout>
        </ScrollView>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
