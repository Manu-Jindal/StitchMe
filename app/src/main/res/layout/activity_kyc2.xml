<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.manujindal.stichme.KYC2">

    <ScrollView
        android:layout_width="368dp"
        android:layout_height="0dp"
        android:foregroundGravity="center_vertical|center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:foregroundGravity="center_vertical|center_horizontal"
            android:gravity="center_vertical|center_horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.526"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.454">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foregroundGravity="center_vertical|center_horizontal">

                <GridLayout
                    android:id="@+id/gridLayout"
                    android:layout_width="369dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_row="0"
                    android:fontFamily="sans-serif-smallcaps"
                    android:foregroundGravity="center_vertical|center_horizontal"
                    tools:layout_editor_absoluteX="7dp"
                    tools:layout_editor_absoluteY="7dp">

                    <TextView
                        android:id="@+id/occupationLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_marginLeft="15dp"
                        android:layout_row="0"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="Occupation"
                        android:textSize="30sp" />

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_row="1">

                        <RadioButton
                            android:id="@+id/occupation1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="40dp"
                            android:layout_marginTop="10dp"
                            android:backgroundTint="#d3d3d3"
                            android:buttonTint="#d3d3d3"
                            android:fontFamily="sans-serif-smallcaps"
                            android:tag="Business"
                            android:text="Business"
                            android:textColor="#D3D3D3"
                            android:textColorHighlight="#d3d3d3"
                            android:textColorHint="#d3d3d3"
                            android:textColorLink="#d3d3d3"
                            android:textSize="20sp" />

                        <RadioButton
                            android:id="@+id/occupation2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="sans-serif-smallcaps"
                            android:layout_marginLeft="40dp"
                            android:layout_marginTop="10dp"
                            android:tag="Service"
                            android:buttonTint="#d3d3d3"
                            android:text="Service"
                            android:textColor="#D3D3D3"
                            android:textSize="20sp" />

                        <RadioButton
                            android:id="@+id/occupation3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:layout_marginTop="5dp"
                            android:fontFamily="sans-serif-smallcaps"
                            android:text="Student"
                            android:buttonTint="#d3d3d3"
                            android:textColor="#D3D3D3"
                            android:textSize="20sp" />

                        <RadioButton
                            android:id="@+id/occupation4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:layout_marginTop="5dp"
                            android:text="Other"
                            android:textColor="#D3D3D3"
                            android:buttonTint="#d3d3d3"
                            android:fontFamily="sans-serif-smallcaps"
                            android:textSize="20sp" />

                    </RadioGroup>

                    <TextView
                        android:id="@+id/preferenceLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="20dp"
                        android:layout_row="2"
                        android:buttonTint="#d3d3d3"
                        android:drawablePadding="20sp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:includeFontPadding="false"
                        android:text="What you prefer?"
                        android:textSize="30sp" />

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_row="3">

                        <RadioButton
                            android:id="@+id/preference1"
                            android:layout_width="wrap_content"
                            android:textColor="#D3D3D3"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="40dp"
                            android:layout_marginTop="10dp"
                            android:text="Formal"
                            android:buttonTint="#d3d3d3"
                            android:fontFamily="sans-serif-smallcaps"
                            android:textSize="20sp" />

                        <RadioButton
                            android:id="@+id/preference2"
                            android:layout_width="wrap_content"
                            android:textColor="#D3D3D3"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="40dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="sans-serif-smallcaps"
                            android:text="Semi-Formal"
                            android:buttonTint="#d3d3d3"
                            android:textSize="20sp" />

                        <RadioButton
                            android:id="@+id/preference3"
                            android:layout_width="wrap_content"
                            android:textColor="#D3D3D3"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="40dp"
                            android:layout_marginTop="5dp"
                            android:text="Casual"
                            android:fontFamily="sans-serif-smallcaps"
                            android:buttonTint="#d3d3d3"
                            android:textSize="20sp" />

                        <RadioButton
                            android:id="@+id/preference4"
                            android:layout_width="wrap_content"
                            android:textColor="#D3D3D3"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:layout_marginTop="5dp"
                            android:fontFamily="sans-serif-smallcaps"
                            android:text="Not Specific"
                            android:buttonTint="#d3d3d3"
                            android:textSize="20sp" />
                    </RadioGroup>

                </GridLayout>


                <Button
                    android:id="@+id/NextPage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/gridLayout"
                    android:layout_centerHorizontal="true"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_row="2"
                    android:background="@drawable/button1"
                    android:fontFamily="sans-serif-smallcaps"
                    android:onClick="nextActFromMain"
                    android:text="Next" />
            </GridLayout>

        </RelativeLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
