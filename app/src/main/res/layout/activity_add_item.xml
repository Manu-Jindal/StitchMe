<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bkg2"
    tools:context="com.manujindal.stichme.AddItem">

    <RelativeLayout
        android:id="@+id/addItemRelativeLayout"
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/AddItemHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_row="0"
                    android:text="Add More Items?"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <ListView
                    android:id="@+id/checkoutList"
                    android:layout_width="match_parent"
                    android:layout_height="175dp"
                    android:layout_column="0"
                    android:layout_columnSpan="3"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_row="1"
                    android:layout_weight="1"
                    android:background="@drawable/list_background"
                    android:divider="#000000"
                    android:dividerHeight="1dp" />

                <TextView
                    android:id="@+id/textView29"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="right"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_row="2"
                    android:foregroundGravity="right"
                    android:gravity="right"
                    android:text="Bill Amount:"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:layout_row="2"
                    android:foregroundGravity="right"
                    android:gravity="right"
                    android:text="Rs."
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/totalBillAmount"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_gravity="right"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_row="2"
                    android:foregroundGravity="left"
                    android:gravity="left"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/GSTlabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="right"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="10dp"
                    android:layout_row="3"
                    android:foregroundGravity="right"
                    android:gravity="right"
                    android:text="GST(12%):"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/GSTRs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_gravity="right"
                    android:layout_row="3"
                    android:foregroundGravity="right"
                    android:gravity="right"
                    android:text="Rs."
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/GST"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_gravity="right"
                    android:layout_marginRight="20dp"
                    android:layout_row="3"
                    android:foregroundGravity="left"
                    android:gravity="left"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ExpressChargeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="right"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="10dp"
                    android:layout_row="4"
                    android:foregroundGravity="right"
                    android:gravity="right"
                    android:text="Express Charge:"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ExpressChargeRs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_gravity="right"
                    android:layout_row="4"
                    android:foregroundGravity="right"
                    android:gravity="right"
                    android:text="Rs."
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ExpressCharge"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_gravity="right"
                    android:layout_marginRight="20dp"
                    android:layout_row="4"
                    android:foregroundGravity="left"
                    android:gravity="left"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/totalBillAmountLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="right"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="10dp"
                    android:layout_row="5"
                    android:foregroundGravity="right"
                    android:gravity="right"
                    android:text="Total Bill Amount:"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/totalBillAmountRs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_gravity="right"
                    android:layout_row="5"
                    android:foregroundGravity="right"
                    android:gravity="right"
                    android:text="Rs."
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/FinalBillAmount"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_gravity="right"
                    android:layout_marginRight="20dp"
                    android:layout_row="5"
                    android:foregroundGravity="left"
                    android:gravity="left"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/your_id"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/FinalBillAmount"
                    android:layout_column="0"
                    android:layout_columnSpan="3"
                    android:layout_marginTop="20dp"
                    android:layout_row="4"
                    android:background="#000000" />


                <TextView
                    android:id="@+id/your_id1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/FinalBillAmount"
                    android:layout_column="0"
                    android:layout_columnSpan="3"
                    android:layout_marginTop="20dp"
                    android:layout_row="5"
                    android:background="#000000" />


                <Button
                    android:id="@+id/addItemId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_columnSpan="3"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_row="6"
                    android:background="@drawable/button4"
                    android:fontFamily="sans-serif-smallcaps"
                    android:onClick="addItem"
                    android:text="Add Item"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/checkoutId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_columnSpan="3"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_row="7"
                    android:background="@drawable/button4"
                    android:fontFamily="sans-serif-smallcaps"
                    android:onClick="checkout"
                    android:text="Checkout"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="17dp"
                    android:textStyle="bold" />

            </GridLayout>
        </android.support.v4.widget.NestedScrollView>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
