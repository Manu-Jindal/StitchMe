<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.manujindal.stichme.ClothType">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:gravity="center_vertical|center_horizontal"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:foregroundGravity="center_vertical|center_horizontal">

                <GridLayout
                    android:id="@+id/gridLayout2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:foregroundGravity="center_vertical|center_horizontal"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="0dp">

                    <TextView
                        android:id="@+id/tablerow1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginLeft="15dp"
                        android:layout_row="2"

                        android:fontFamily="sans-serif-smallcaps"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="Shirt"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tablerow2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_gravity="right"
                        android:layout_marginLeft="15dp"
                        android:layout_row="4"
                        android:fontFamily="sans-serif-smallcaps"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="Suit"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tablerow3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_gravity="right"
                        android:layout_marginLeft="15dp"
                        android:layout_row="6"
                        android:fontFamily="sans-serif-smallcaps"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="Trouser"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tablercol1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_gravity="center_horizontal"
                        android:layout_row="0"
                        android:fontFamily="sans-serif-smallcaps"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="Colour"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tablecol2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:layout_gravity="center_horizontal"
                        android:layout_row="0"
                        android:fontFamily="sans-serif-smallcaps"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="Pattern"
                        android:textSize="20sp" />


                    <Spinner
                        android:id="@+id/tablerow01"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_column="1"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="20dp"
                        android:layout_row="2"
                        android:background="#000000"
                        android:backgroundTint="#000000"
                        android:ems="10"
                        android:fontFamily="sans-serif-smallcaps"
                        android:foregroundTint="#000000"
                        android:gravity="center_vertical|center_horizontal"
                        android:inputType="textPersonName"
                        android:popupTheme="@style/PopupMenuStyle" />

                    <Spinner
                        android:id="@+id/tablerow02"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_column="2"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="20dp"
                        android:layout_row="2"
                        android:background="#000000"
                        android:backgroundTint="#000000"
                        android:ems="10"
                        android:fontFamily="sans-serif-smallcaps"
                        android:foregroundTint="#000000"
                        android:gravity="center_vertical|center_horizontal"
                        android:inputType="textPersonName"
                        android:popupTheme="@style/PopupMenuStyle" />

                    <Spinner
                        android:id="@+id/tablerow11"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_column="1"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="30dp"
                        android:layout_row="4"
                        android:background="#000000"
                        android:backgroundTint="#000000"
                        android:ems="10"
                        android:fontFamily="sans-serif-smallcaps"
                        android:foregroundTint="#000000"
                        android:gravity="center_vertical|center_horizontal"
                        android:inputType="textPersonName"
                        android:popupTheme="@style/PopupMenuStyle" />

                    <Spinner
                        android:id="@+id/tablerow12"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_column="2"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="5dp"
                        android:layout_row="4"
                        android:background="#000000"
                        android:backgroundTint="#000000"
                        android:ems="10"
                        android:fontFamily="sans-serif-smallcaps"
                        android:foregroundTint="#000000"
                        android:gravity="center_vertical|center_horizontal"
                        android:inputType="textPersonName"
                        android:popupTheme="@style/PopupMenuStyle" />

                    <Spinner
                        android:id="@+id/tablerow21"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_column="1"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="30dp"
                        android:layout_row="6"
                        android:background="#000000"
                        android:backgroundTint="#000000"
                        android:ems="10"
                        android:fontFamily="sans-serif-smallcaps"
                        android:foregroundTint="#000000"
                        android:gravity="center_vertical|center_horizontal"
                        android:inputType="textPersonName"
                        android:popupTheme="@style/PopupMenuStyle" />

                    <Spinner
                        android:id="@+id/tablerow22"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_column="2"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="5dp"
                        android:layout_row="6"
                        android:background="#000000"
                        android:backgroundTint="#000000"
                        android:ems="10"
                        android:fontFamily="sans-serif-smallcaps"
                        android:foregroundTint="#000000"
                        android:gravity="center_vertical|center_horizontal"
                        android:inputType="textPersonName"
                        android:popupTheme="@style/PopupMenuStyle" />


                </GridLayout>

                <Button
                    android:id="@+id/NextPage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginTop="30dp"
                    android:layout_row="1"
                    android:background="@drawable/button1"
                    android:fontFamily="sans-serif-smallcaps"
                    android:onClick="nextActFromMain"
                    android:text="Next" />

            </GridLayout>
        </ScrollView>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
