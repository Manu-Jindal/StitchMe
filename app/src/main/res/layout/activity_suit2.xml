<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.manujindal.stichme.Suit2">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_row="0"
            android:text="Choose Jacket Type"
            android:textSize="25dp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="368dp"
            android:layout_height="400dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

                <ImageButton
                    android:id="@+id/JacketType1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_row="1"
                    android:onClick="nextActFromMain"
                    android:tag="One Button"
                    app:srcCompat="@drawable/suit11resized" />

                <TextView
                    android:id="@+id/JacketTypeLabel1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="3dp"
                    android:layout_row="2"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="One Button"
                    android:textSize="20sp" />

                <ImageButton
                    android:id="@+id/JacketType2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_row="3"
                    android:onClick="nextActFromMain"
                    android:tag="Two Button"
                    app:srcCompat="@drawable/suit12resized" />

                <TextView
                    android:id="@+id/JacketTypeLabel2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="3dp"
                    android:layout_row="4"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Two Button"
                    android:textSize="20sp" />

                <ImageButton
                    android:id="@+id/JacketType3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_row="5"
                    android:onClick="nextActFromMain"
                    android:tag="Three Button"
                    app:srcCompat="@drawable/suit13resized" />

                <TextView
                    android:id="@+id/JacketTypeLabel3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="3dp"
                    android:layout_row="6"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Three Button"
                    android:textSize="20sp" />

                <ImageButton
                    android:id="@+id/JacketType4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_row="7"
                    android:onClick="nextActFromMain"
                    android:tag="Four Button"
                    app:srcCompat="@drawable/suit14resized" />

                <TextView
                    android:id="@+id/JacketTypeLabel4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="3dp"
                    android:layout_row="8"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Four Button"
                    android:textSize="20sp" />

                <ImageButton
                    android:id="@+id/JacketType5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_row="9"
                    android:onClick="nextActFromMain"
                    android:tag="Four Button\nDouble-Breasted\(2 to close)"
                    app:srcCompat="@drawable/suit15resized" />

                <TextView
                    android:id="@+id/JacketTypeLabel5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="3dp"
                    android:layout_row="10"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Four Button\nDouble-Breasted\(2 to close)"
                    android:textSize="20sp" />


                <ImageButton
                    android:id="@+id/JacketType6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_row="11"
                    android:onClick="nextActFromMain"
                    android:tag="Four Button\nDouble-Breasted\(1 to close)"
                    app:srcCompat="@drawable/suit16resized" />

                <TextView
                    android:id="@+id/JacketTypeLabel6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="3dp"
                    android:layout_row="12"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Four Button\nDouble-Breasted\(1 to close)"
                    android:textSize="20sp" />


                <ImageButton
                    android:id="@+id/JacketType7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_row="13"
                    android:onClick="nextActFromMain"
                    android:tag="Six Button\nDouble-Breasted\(2 to close)"
                    app:srcCompat="@drawable/suit17resized" />

                <TextView
                    android:id="@+id/JacketTypeLabel7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="3dp"
                    android:layout_row="14"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Six Button\nDouble-Breasted\(2 to close)"
                    android:textSize="20sp" />


                <ImageButton
                    android:id="@+id/JacketType8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_row="15"
                    android:onClick="nextActFromMain"
                    android:tag="Six Button\nDouble-Breasted\(3 to close)"
                    app:srcCompat="@drawable/suit18resized" />

                <TextView
                    android:id="@+id/JacketTypeLabel8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="3dp"
                    android:layout_row="16"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Six Button\nDouble-Breasted\(3 to close)"
                    android:textSize="20sp" />


                <ImageButton
                    android:id="@+id/JacketType9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_row="17"
                    android:onClick="nextActFromMain"
                    android:tag="Six Button\nDouble-Breasted\(1 to close)"
                    app:srcCompat="@drawable/suit19resized" />

                <TextView
                    android:id="@+id/JacketTypeLabel9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="3dp"
                    android:layout_row="18"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Six Button\nDouble-Breasted\(1 to close)"
                    android:textSize="20sp" />
            </GridLayout>
        </ScrollView>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
